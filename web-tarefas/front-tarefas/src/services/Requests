

const request = async (e, situacao, setDados)=>{
    e.preventDefault();
    const url = `http://localhost:8080/tarefas?situacao=${situacao}`;

    const res = await fetch(url)
    const json = await res.json();
    
    setDados(json.content);
}

const requestInicial = async (situacao, setDados)=>{
    const url = `http://localhost:8080/tarefas?situacao=${situacao}`;

    const res = await fetch(url)
    const json = await res.json();
    
    setDados(json.content);
}


const excluir = async (id)=>{
    const url = `http://localhost:8080/tarefas/${id}`
    
    await fetch(url,{method:"DELETE"});

}


const atualizar = (tarefa)=>{
    const url = `http://localhost:8080/tarefas/${tarefa.id}`
    fetch(url,{method:"PUT",headers:{"Content-Type": "application/json"}, body:JSON.stringify(tarefa)})
}

export default {request, excluir, atualizar, requestInicial};
